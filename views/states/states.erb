<div class="white">
	<div class="container">
		<div class="row" style="padding: 70px 0 24px 0;">
			<div class="col-md-8 offset2">
			<h5>States</h5>
			<table class="table table-striped table-condensed">
				<tr>
				<th> </th>	
				<th> </th>
				<th>State</th>
				<th style="text-align: center;">Zone</th>
				<th><a href="/states/new" class="btn btn-mini btn-success pull-right"><i class="icon icon-plus"></i>  New</a></th>
			</tr>
			<% @state.each do |state| %>
			<tr>
				<td style="color: #b4c7ce;"><small><%= state.id %></small></td>
				<td><strong><%= state.abbr %></strong></td>
				<td><%= state.name %></td>
				<td style="text-align: center;"><%= state.zone.name unless state.zone_id.nil? %></td>
				<td style="text-align: right;"><a href="/states/<%= state.id %>/edit" class="btn btn-mini">Edit</a></td>
			</tr>
			<% end %>
			</table>
		</div>
	</div>
</div>