<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="span8 offset2">
				<h1>RRC</h1>
			</div>
			<div class="span8 offset2">
				<p><a href="/rrcs/new" class="btn btn-small btn-success pull-right">New</a>
				<a href="/admin/admin" class="btn btn-small">Admin</a></p>
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th> </th>
						<th style="text-align: center;">State</th>
						<th>Email</th>
						<th style="text-align: center;">Edit</th>
					</tr>
					<% @rrcs.each do |rrc| %>
					<tr>
						<td style="text-align: center;">
							<label class="checkbox">
								<input type="checkbox">
							</label>
						</td>
						<td style="text-align: center;"><%= rrc.state %></td>
						<td class="semi-bold"><a href="mailto:<%= rrc.email %>"><%= rrc.email %></a></td>
						<td style="text-align: center;"><a href="rrcs/<%= rrc.id %>/edit"> &nbsp; <i class="icon-pencil"></i> &nbsp; </a></td>
					</tr>
					<% end %>
				</table>
			</div>

		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->

