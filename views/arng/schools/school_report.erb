	<div class="container">	
		<div class="row">  
			<div class="col-md-12">
				
				<% if session[:recruiter] %>
					 <a href="/recruiters/<%= session[:recruiter] %>/profile" style="margin-top: 12px;" class="btn pull-right">Recruiter Profile</a>
				<% end %>
				
				
				<h1 class="page-header">Class Reports</h1>
			</div>
			
			<div class=" col-md-5">
					<h5><%= @school.school_name %></h5>
					<p><%= @school.school_address1 %> <%= @school.school_address2 %>
						<br />
						<%= @school.school_city %>, <%= @school.school_state %> &nbsp;<%= @school.school_zip %>
					</p>
					<p>
						<strong>School Password:</strong> &nbsp; <%= @school.school_password %><br />

						<strong>Recruiter:</strong> &nbsp; <%= @school.recruiter.rank %> <%= @school.recruiter.first_name %> <%= @school.recruiter.middle_name %> <%= @school.recruiter.last_name %><br />
						<small>Total registered students in this school: &nbsp;&nbsp;<strong><%= @school.students.count %></strong></small></p>
			</div>		
			<div class=" col-md-7">
				<p>
					<strong>Select class date</strong>
				</p>
				<p>
					<span style="float:left;"><%= date_to_field('start', @start) %></span><button type="submit" class="btn btn-primary pull-left" style="margin-left: 6px; margin-top: 2px;">Show</button>
				</p>
				<p class="clear-both">&nbsp;<br /><br /></p>
				
				<form method="get">
				<div class="row" style="margin-top: 2em;">
				<div class="col">

					<p><strong>Summary Report</strong></p>
					<p><a href="<%= request.url %><%= params.count > 0 ? '&export=true' : '?export=true' %>" class="btn btn-success" >Export</a>
					</p>
				</div>
				<div class="col">
					<p><strong>Individual Reports</strong></p>
					<p><a href="<%= request.url %><%= params.count > 0 ? '&export=true' : '?export=true' %>" class="btn btn-success" >Export</a></p>
				</div>
				</form>
				</div>
			</div>
		</div>
		<div class="row"> 
			<div class="col-md-12">	
				
				<br />

				<table class="table table-striped table-condensed table-hover">
						<tr>
							<th>Student</th>
							<th>School Password</th>
							<th>Class Date</th>
						</tr>
					
						<% @school.students.sort_by(&:created_at).reverse.each do |student| %>
						
						<tr>
							<td>
								<%= student.first_name %> <%= student.middle_name %> <%= student.last_name %>
							</td>
							<td>
								<%= student.school_password %>
							</td>
							<td> 
								<%= format_american_day(student.created_on) %>
							</td>
						
						</tr>
					
						<% end %>
					</table>
				
			</div>
		</div>
		
	</div>

