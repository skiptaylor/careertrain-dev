					<label class="control-label" for="fax">Fax</label>
					<div class="controls">
						<input type="text" class="textfield span3" name="fax" id="fax" value="<%= @school.fax %>" />
					</div>
				</div> -->
								
				<!-- <div class="control-group">
				    <div class="controls">
				      <label class="checkbox">
			    		  <input type="checkbox" name="cd_before" id="cd_before" <%= 'checked="checked"' if @school.cd_before  %> />
			    		 Used Career Direction Before?
			  	  		</label>
					</div>
				</div> -->
				
				<div class="control-group hidden">
					<label class="control-label" for="school_password">School Password</label>
					<div class="controls">
						<input type="text" class="textfield span3" name="school_password" id="school_password" value="<%= @school.school_password %>" /> 
					</div>
				</div>
				
				<div class="control-group">
					<label for="recruiter_id" class="control-label">Recruiter</label>
					<div class="controls">
						<select type="text" id="recruiter_id" name="recruiter_id" class="col-md-4" value="<%= @school.recruiter_id %>">
								<option value=""></option>
							<% @recruiter.each do |recruiter| %>
								<option value="<%= recruiter.id %>" <%= 'selected' if recruiter.id == @school.recruiter_id %>><%= recruiter.state %> - <%= recruiter.rank %> <%= recruiter.first_name %> <%= recruiter.last_name %> - <%= recruiter.id %></option>
							<% end %>
						</select>
					</div>
				</div>
				
				<div class="control-group">
				    <div class="controls">
				      <label class="checkbox">
 				    	  <input type="checkbox" name="active" id="active" <%= 'checked="checked"' if @school.active  %> />
						  <span style="font-size: 17px;"><strong>Active</strong></span> &nbsp;<small>(activates school and creates password)</small>
 				  		</label>
					</div>
				</div>
					
				<div class="control-group">
				    <div class="controls">
						 <input class="btn btn-success" type="submit" value="Save" />&nbsp;&nbsp;&nbsp;<a href="/arng/schools/<%= @school.id %>/school" class="btn">Cancel</a>&nbsp;&nbsp;&nbsp;<a href="/arng/schools/<%= @school.id %>/delete" class="delete btn btn-warning"><i class="icon-trash"></i></a>
					 </div>
				 </div>
				 <div class="well" style="margin: 4em; padding: 2em 0 1em 0; text-align: center;">
				<% if @school.active == true %> 
					School Password
					<h6 style="color: #b5011c;"><%= @school.school_password %></h6>
				<% else %>
					<h5 class="muted">SCHOOL NOT ACTIVATED</h5>
				<% end %>	
				 </div>
			 	</form>
			</div>
			
		</div>
		<%= session[:admin] %> / <%= session[:recruiter] %> // <%= @school.recruiter_id %>
	</div> <!-- /container -->
