<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="col-md-12">
				<h1 class="page-header">Careers and Occupations Guide School Registration</h1>
				<h5>Register your school to get a password.</h5>
			</div>
		</div>
		<div class="row">
			<div class="span6">
									
				<form method="post" id="register-school" class="school form-horizontal">
				
				<p class="hidden">
				  <label class="checkbox">
				    <input type="checkbox" name="cd" id="cd" checked <%= 'checked="checked"' if @school.cd  %> />
				  </label>
				</p>
				
				<p style="font-size: 1.1em; margin: 1em 0 1.5em 0;"><strong>Educator’s Contact Information</strong></p>
				
				<div class="control-group">
					<label class="control-label" for="first_name">Educator’s First name</label>
					<div class="controls">
						<input type="text" class="textfield col-md-4" name="first_name" id="first_name" value="<%= @school.first_name %>" /> 
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="middle_initial">Initial</label>
					<div class="controls">
						<input type="text" class="textfield span1" name="middle_initial" id="middle_initial" value="<%= @school.middle_initial %>" /> 
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="last_name">Educator’s Last name</label>
					<div class="controls">
						<input type="text" class="textfield col-md-4" name="last_name" id="last_name" value="<%= @school.last_name %>" /> 
					</div>
				</div>
				<br />
				<div class="control-group">
					<label class="control-label" for="school_name"><strong>School name</strong></label>
					<div class="controls">
						<input type="text" class="textfield col-md-4" name="school_name" id="school_name" value="<%= @school.school_name %>" /> 
					</div>
				</div>
				
				<div class="control-group">
					<label class="control-label" for="school_address1">School Address</label>
					<div class="controls">
						<input type="text" class="textfield col-md-4" name="school_address1" id="school_address1" value="<%= @school.school_address1 %>" /> 
					</div>
				</div>
				
				<div class="control-group">
					<label class="control-label" for="school_address2"> </label>
					<div class="controls">
						<input type="text" class="textfield col-md-4" name="school_address2" id="school_address2" value="<%= @school.school_address2 %>" /> 
					</div>
				</div>
				
				<div class="control-group">
					<label class="control-label" for="school_city">City</label>
					<div class="controls">
						<input type="text" class="textfield col-md-4" name="school_city" id="school_city" value="<%= @school.school_city %>" /> 
					</div>
				</div>
					
				<div class="control-group">
					<label for="school_state" class="control-label">State</label>
					<div class="controls">
						<select type="text" id="school_state" name="school_state" style="width: 86px;" value="<%= @school.school_state %>">
								<option value=""></option>
							<% @state.sort{|a,b| a.abbr <=> b.abbr}.each do |state| %>
								<option value="<%= state.abbr %>" <%= 'selected' if state.abbr == @school.school_state %>><%= state.abbr %></option>
							<% end %>
						</select>&nbsp;&nbsp;&nbsp;&nbsp;
					</div>
				</div>
				
				<% unless @school.active %>
				<div class="control-group">
					<label class="control-label" for="school_zip">Zip</label>
					<div class="controls">
						<input type="text" class="textfield span2" name="school_zip" id="school_zip" value="<%= @school.school_zip %>" /> 
					</div>
				</div>
				<% else %>
				<div class="control-group">
					<label class="control-label" for="school_zip">Zip</label>
					<div class="controls">
						<input type="text" class="textfield span2" name="school_zip" id="disabledInput" value="<%= @school.school_zip %>"  disabled /> 
					</div>
				</div>
				<% end %>
				<div class="control-group">
					<label class="control-label" for="email">Counselor/teacher email</label>
					<div class="controls">
						<input type="text" class="textfield col-md-4" name="email" id="email" value="<%= @school.email %>" /> 
					</div>
				</div>
				<div class="control-group">
					<label class="control-label" for="number_seniors">Number of students</label>
					<div class="controls">
						<input type="text" class="textfield span1" name="number_seniors" id="number_seniors" value="<%= @school.number_seniors %>" /> 
					</div>
				</div>
				
				
			</div>
			<div class="span6 form-horizontal">
				
				<p style="font-size: 1.1em; margin: 1em 0 1.5em 3em;"><strong>ARNG Rep</strong></p>
				
