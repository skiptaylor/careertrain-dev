
	<div class="container">	
		<div class="row">  
			<div class="col-md-12">
				<div class="pull-right">
					<p style="float: right; margin-top: 6px;"><a href="/admin/admin_edit" class="btn btn-small">Admin Index</a></p>
				</div>
				<h1 class="page-header">Registered Schools</h1>
			</div>
			<div class="col-sm-12">
				<div class="control-group">
					<div class="input-append form-group mb-2">
						<form class="form-search form-inline" method="get">
						<input type="text" class="search-query form-control col-sm-6" name="search" placeholder="Search School Zip" value="<%= params[:search] %>" />
						&nbsp;&nbsp;&nbsp;<button type="submit" class="btn btn-success">Find</button>
						</form>
					</div>
				</div>
					<small style="color: #808080;">Shows first 100 results only</small>
				
				<table class="table table-striped table-sm table-hover">
					<tr>
						<th>School</th>
						<th>City State</th>
						<th>School ID</th>
						<th style="text-align: center;"><a href="/arng/schools/create" class="btn btn-success btn-mini">New</a></th>
					</tr>
					<% @school.sort_by(&:updated_at).reverse.each do |school| %>
					
					<tr>
						<td><%= school.school_name %></td>
						<td><%= school.school_city %>,  <%= school.school_state %></td>
						<td><%= school.school_password %></td>
						<td style="text-align: center;"><a href="/arng/schools/<%= school.id %>/edit_admin" class="btn btn-mini"> Edit </a></td>
					</tr>
					<% end %>
					<tr>
						<th colspan="5"><small>Total number of schools:<% @school = School.all(:active => true) %> <strong><%= @school.count %></strong><br />
						</th>

					</tr>
				</table>
			</div>

			<div class="col-md-4">
				 <p> </p>
			</div>
		
		</div>
	</div> <!-- /container -->

