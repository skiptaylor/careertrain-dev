      </div>

<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="col-md-12">
				<div class="pull-right">
					<p style="float: right;"><a href="/admin/admin_edit" class="btn btn-small">Admin Index</a></p>
					<form class="form-search" method="get">
						<div class="input-append">
							<input type="text" class="search-query span3" name="search" placeholder="Search School Name" value="<%= params[:search] %>" />
							<button type="submit" class="btn btn-success">Find</button>
						</div>
						<br /><center><small style="color: #808080;">Shows first 300 results only</small></center>
					</form>
				</div>
				<h1>Registered Schools</h1>
			</div>
			<div class="col-md-12">
				
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>School</th>
						<th>City State</th>
						<th>Active</th>
						<th>Password</th>
						<th style="text-align: center;">Edit</th>
					</tr>
					<% @school.sort_by(&:updated_at).each do |school| %>
					
					<tr>
						<td><%= school.school_name %></td>
						<td><%= school.school_city %>,  <%= school.school_state %></td>
						<td><%= school.active %></td>
						<td><%= school.school_password %></td>
						<td style="text-align: center;"><a href="/arng/schools/<%= school.id %>/edit_admin"> <i class="icon-edit"></i> </a></td>
					</tr>
					<% end %>
					<tr>
						<th colspan="5"><small>Total number of registered schools from search: <%= @school.count %><br /> 
							Total number of active schools:<% @school = School.all(:active => true) %> <%= @school.count %><br />
							Total number of inactive schools:<% @school = School.all(:active => false) %> <%= @school.count %></small>
						</th>

					</tr>
				</table>
			</div>

			<div class="col-md-4">
				 <p> </p>
			</div>
		
		</div>
	</div> <!-- /container -->
</div> <!-- /container-white -->
