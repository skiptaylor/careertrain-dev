	<div class="container">	
		<div class="row">  
			<div class="col-md-12">
				<h1 class="page-header">Careers and Occupations Guide Report</h1>
			</div>
		</div>
		<div class="row">	
			<div class="col-md-5">
				<h3><%= @student.first_name %> <%= @student.middle_name %> <%= @student.last_name %></h3>
				<%= @student.email %><br /><br />
			</div>
	
			<div class="col-md-7">
				
			<form method="get">
				<h3>Your Highest Score - <%= @student.score1 %></h3>
				<h3>Your 2nd Highest Score - <%= @student.score2 %></h3>
				<br />
				<input type="submit" class="btn btn-success" value="View short Report" />
			</form>
			
			</div>
			
			
		
		</div>
	</div>
	
<script  type="text/javascript">
	var frmvalidator = new Validator("scores");
	frmvalidator.addValidation("score1","req","Please enter your 1st highest score");
	frmvalidator.addValidation("score2","req","Please enter your 2nd highest score");

</script>