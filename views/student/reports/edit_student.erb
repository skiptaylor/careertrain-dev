	<div class="container">	
		<div class="row">  
			<div class="col-md-12">
		      <h1 class="page-header">Edit Account</h1>
			</div>
		</div>
		<form class="form-horizontal" method="post" id="resume_tool">
		<div class="form-row">
			<div class="form-group col-md-6"> 
				<label for="school_password">School's Password</label>
				<input type="text" class="form-control" placeholder="" name="school_password" id="school_password" aria-describedby="schoolpasswordHelp" value="<%= @student.school_password %>" />
					<small id="schoolpasswordHelp" class="form-text">If you do not know your school's password, please contact your guidance counselor or teacher.</small>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-6">
				<label for="email">Personal Email Address</label>
				<input type="text" class="form-control" placeholder="" name="email" id="email" aria-describedby="emailHelp" value="<%= @student.email %>" />
					<small id="emailHelp" class="form-text">You will use your personal email to access your account.</small>
			</div>
			<div class="form-group col-md-6">
				<label for="password">Personal Password</label>
				<input type="text" class="form-control" placeholder="" name="password" id="password" aria-describedby="passwordHelp" value="<%= @student.password %>" />
					<small id="passwordHelp" class="form-text">This personal password will be used with your email to access your account.</small>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-4">
				<label for="first_name">First Name</label>
				<input type="text" name="first_name" id="first_name" class="form-control" placeholder="" value="<%= @student.first_name %>" />
			</div>
			<div class="form-group col-md-4">						
				<label for="middle_name">Middle Name</label>
				<input type="text" name="middle_name" id="middle_name" class="form-control" placeholder="" value="<%= @student.middle_name %>" />
			</div>
			<div class="form-group col-md-4">
				<label for="last_name">Last Name</label>
				<input type="text" name="last_name" id="last_name" class="form-control" placeholder="" value="<%= @student.last_name %>" />
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-6">
				<label for="address">Address</label>
				<input type="text" name="address" id="address" class="form-control" placeholder="" value="<%= @student.address %>" />
			</div>
			<div class="form-group col-md-6">
				<label for="address2">Address</label>
				<input type="text" name="address2" id="addres2" class="form-control" placeholder="" value="<%= @student.address2 %>" />
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-6">
				<label for="city">City</label>
				<input type="text" name="city" id="city" class="form-control"  placeholder=""value="<%= @student.city %>" />
			</div>
			<div class="form-group col-md-2">
				<label for="state">State</label>
				<select type="text" id="state" name="state" class="form-control" value="<%= @student.state %>">
					<option value=""></option>
					<% @state.sort{|a,b| a.abbr <=> b.abbr}.each do |state| %>
					<option value="<%= state.abbr %>" <%= 'selected' if state.abbr == @student.state %>><%= state.abbr %></option>
					<% end %>
				</select>
			</div>
			<div class="form-group col-md-2">
				<label class="control-label"for="zip">Zip</label>
				<input type="text" name="zip" id="zip" class="form-control" placeholder="" value="<%= @student.zip %>" />
			</div>
		</div>
		<div class="form-row">		
			<div class="form-group col-md-6">
				<label for="phone">Phone</label>
				<input type="text" name="phone" id="phone" class="form-control" placeholder="" value="<%= @student.phone %>" />
			</div>
		</div>
		<div class="form-row">		
			<div class="form-group col-md-6">			
				<label for="birth_date">Date of Birth</label>
				<div class="input-append date">
					<%= date_to_field('birth_date', (@student.birth_date || Time.now)) %>
				</div>
			</div>
		</div>		
		<div class="form-row">		
			<div class="form-group col-md-6">			
				<label for="future">Future Plans</label>
				<select type="text" class="form-control" name="future" id="future" style="text-align: center;" >
	  						<option value="Select one">-- Select one --</option>
	  						<option <%= 'selected' if @student.future == 'Enter technical college/trade school' %> value="Enter technical college/trade school">Enter technical college/trade school</option>
	  						<option <%= 'selected' if @student.future == 'Work full-time' %> value="Work full-time">Work full-time</option>
	  						<option <%= 'selected' if @student.future == 'Work part-time' %> value="Work part-time">Work part-time</option>
	  						<option <%= 'selected' if @student.future == 'Enter the military' %> value="Enter the military">Enter the military</option>
	  						<option <%= 'selected' if @student.future == 'Go to college' %> value="Go to college">Go to college</option>
	  						<option <%= 'selected' if @student.future == 'I have money to pay for education' %> value="I have money to pay for education">I have money to pay for education</option>
	  						<option <%= 'selected' if @student.future == "Counting on parents for money for education" %> value="Counting on parents for money for education">Counting on parents for money for education</option>
	  						<option <%= 'selected' if @student.future == 'Considering sources' %> value='Considering sources'>Considering sources of financial aid or scholarships</option>
				</select>
			</div>
		</div>
		<div class="form-row">				
			<div class="form-group col-md-6">
				<label class="checkbox">
					<input type="checkbox" value="account" onClick="EnableSubmit(this)" checked />&nbsp;&nbsp; I am 13 or older
					</label>
			</div>
			<div class="form-group col-md-6" style="text-align: right;">
				<label for="account"></label>
				<button class="btn btn-primary" id="account" type="submit">Save</button> &nbsp;&nbsp;&nbsp;&nbsp;<a onclick="goBack()" class="btn">Cancel</a>
			</div>
		</div>
		</form>
	</div>


	<script type="text/javascript">
		EnableSubmit = function(val) {
		var submit = document.getElementById("account");
			if (val.checked == true) {
	        submit.disabled = false;
	    	}
			else {
	        submit.disabled = true;
		  	}
		}
	</script>
</div>

<script  type="text/javascript">
	var frmvalidator = new Validator("resume_tool");
	frmvalidator.addValidation("first_name","req","Please enter your First Name");
	frmvalidator.addValidation("last_name","req","Please enter your Last Name");
	frmvalidator.addValidation("address","req","Please enter your Address");
	frmvalidator.addValidation("city","req","Please enter your City");
	frmvalidator.addValidation("state","req","Please enter your State");
	frmvalidator.addValidation("zip","req","Please enter your Zip");
	frmvalidator.addValidation("phone","req","Please enter your phone");
</script>


		