<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="col-md-12">
				<h1 class="page-header">Student Profile &nbsp; <small><%= @student.first_name %> <%= @student.middle_name %> <%= @student.last_name %></small></h1><br />
			</div>
			<div class="span7 offset2">
				<form method="post" id="student" class="form-horizontal" enctype="multipart/form-data">
					<div class="control-group">
						<label class="control-label" for="email">Email</label>
						<div class="controls">
							<input type="text" name="email" id="email" class="textfield span5" value="<%= @student.email %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"for="password">Personal Password</label>
						<div class="controls">
							<input type="text" name="password" id="password" class="textfield span5" value="<%= @student.password %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"for="school_password">School Password</label>
						<div class="controls">
							<input type="text" name="school_password" id="school_password" class="textfield span2" value="<%= @student.school_password %>" />
							<span class="help-block" style="line-height: 1.2em; margin: 5px 52px 6px 0;"><small>If you do not know your school's password, please contact your guidance counselor or teacher.</small></span>
						</div>
					</div>
					<!-- <div class="control-group">
						<label class="control-label"for="name">Name</label>
						<div class="controls">
							<input type="text" name="name" id="name" class="textfield span5" value="<%= @student.name %>" />
						</div>
					</div> -->
					<div class="control-group">
						<label class="control-label"for="first_name">First Name</label>
						<div class="controls">
							<input type="text" name="first_name" id="first_name" class="textfield span5" value="<%= @student.first_name %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"for="middle_name">Middle Name</label>
						<div class="controls">
							<input type="text" name="middle_name" id="middle_name" class="textfield span5" value="<%= @student.middle_name %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"for="last_name">Last Name</label>
						<div class="controls">
							<input type="text" name="last_name" id="last_name" class="textfield span5" value="<%= @student.last_name %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"for="address">Address</label>
						<div class="controls">
							<input type="text" name="address" id="address" class="textfield span5" value="<%= @student.address %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"for="city">City</label>
						<div class="controls">
							<input type="text" name="city" id="city" class="textfield span5" value="<%= @student.city %>" />
						</div>
					</div>
					<div class="control-group">
						<label for="state" class="control-label">State</label>
						<div class="controls">
							<% if @student.state == "" %>
							<select type="text" id="state" name="state" style="width: 86px;" value="<%= @student.state %>" autofocus>
							<% else %>
							<select type="text" id="state" name="state" style="width: 86px;" value="<%= @student.state %>">
							<% end %>
									<option value=""></option>
								<% @state.sort{|a,b| a.abbr <=> b.abbr}.each do |state| %>
									<option value="<%= state.abbr %>" <%= 'selected' if @student.state == state.abbr %>><%= state.abbr %></option>
								<% end %>
							</select>&nbsp;&nbsp;&nbsp;&nbsp;
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"for="zip">Zip</label>
						<div class="controls">
							<input type="text" name="zip" id="zip" class="textfield span2" value="<%= @student.zip %>" />
						</div>
					</div>
					<div class="control-group">
						<label class="control-label"for="phone">Phone</label>
						<div class="controls">
							<input type="text" name="phone" id="phone" class="textfield span2" value="<%= formatted_number(@student.phone) %>" />
						</div>
					</div>
						
					<div class="control-group">
						<label class="control-label" for="birth_date">Date of Birth</label>
						<div class="controls">
							<%= date_to_field('birth_date', (@student.birth_date || Time.now)) %>
						</div>
												
					
					
					</div>
					<div class="control-group">
						<label class="control-label" for="future">Future Plans</label>
						<div class="controls">
	  					<select type="text" class="span5" name="future" id="future" style="text-align: center;" >
	  						<option value="Select one">-- Select one --</option>
	  						<option <%= 'selected' if @student.future == 'Enter technical college/trade school' %> value="Enter technical college/trade school">Enter technical college/trade school</option>
	  						<option <%= 'selected' if @student.future == 'Work full-time' %> value="Work full-time">Work full-time</option>
	  						<option <%= 'selected' if @student.future == 'Work part-time' %> value="Work part-time">Work part-time</option>
	  						<option <%= 'selected' if @student.future == 'Enter the military' %> value="Enter the military">Enter the military</option>
	  						<option <%= 'selected' if @student.future == 'Go to college' %> value="Go to college">Go to college</option>
	  						<option <%= 'selected' if @student.future == 'I have money to pay for education' %> value="I have money to pay for education">I have money to pay for education</option>
	  						<option <%= 'selected' if @student.future == "Counting on parents for money for education" %> value="Counting on parents for money for education">Counting on parents for money for education</option>
	  						<option <%= 'selected' if @student.future == 'Considering sources' %> value='Considering sources'>Considering sources of financial aid or scholarships</option>
	  					</select>
						</div>
					</div>
					
					
					
					
					
					<div class="control-group">
						<div class="controls">
							<input class="btn btn-small btn-primary" type="submit" value="Save" /> &nbsp; <a class="btn btn-small" href="/student/reports/report/enter_scores">Cancel</a>
						</div>
					</div>
				</form>
			</div>
		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->

<script  type="text/javascript">
	var frmvalidator = new Validator("student");
	frmvalidator.addValidation("password","req","Please enter your personal password");
	frmvalidator.addValidation("email","req","Please enter your personal email");
	frmvalidator.addValidation("school_password","req","Please enter your School's Password");
	frmvalidator.addValidation("first_name","req","Please enter your First Name");
	frmvalidator.addValidation("last_name","req","Please enter your Last Name");
	frmvalidator.addValidation("address","req","Please enter your Address");
	frmvalidator.addValidation("city","req","Please enter your City");
	frmvalidator.addValidation("state","req","Please enter your State");
	frmvalidator.addValidation("zip","req","Please enter your Zip");
	frmvalidator.addValidation("phone","req","Please enter your phone");
</script>


