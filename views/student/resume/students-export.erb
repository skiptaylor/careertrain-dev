<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="col-md-12">
				<a href="/admin/admin_edit" class="btn btn-small pull-right">Admin Index</a>
			<h1>Student List</h1>
			<div class="pull-right">
				<form class="form-search" method="get">
					<div class="input-append">
						<input type="text" class="search-query span3" name="search" placeholder="Search Email" value="<%= params[:search] %>" />
						<button type="submit" class="btn btn-success">Find</button>
					</div>
				</form>
			</div>
			<p>Total number of students: <strong><%= @student.count %></strong></p>
			<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>Name</th>
						<th>Email</th>
						<th>Password</th>
						<th> </th>
					</tr>
					<% @student.sort_by(&:created_at).reverse.each do |student| %>
					<tr>
						<td><%= student.name %></td>
						<td><%= student.email %></td>
						<td><%= student.password %></td>
						<td style="text-align: right;"><a href="/student/resume/<%= student.id %>/student"><i class="icon-info-sign"></i></a>&nbsp;&nbsp;&nbsp;<a href="/student/resume/<%= student.id %>/delete" class="delete text-error"><i class="icon-trash"></i></a></td>
					</tr>
					<% end %>
				</table>
				
			</div>
			
		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->

