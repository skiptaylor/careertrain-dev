	<div class="container">	
		<div class="row"> 
			<div class="col-md-12">
				<a href="/student/resume/index" class="btn btn-small pull-right" style="margin-top: 12px;">Resume Tool</a>
				<h1 class="page-header">Awards &nbsp; <small><%= @student.name %></small></h1> 
			</div>
		</div>
		<div class="row">
			<div class="col-md-8 offset-md-2">
				
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>Award</th>
						<th>Date</th>
						<th><a href="/student/resume/awards/new" class="btn btn-small btn-success pull-right"><i class="icon-plus"></i> New</a></th>
					</tr>
					<% @student.awards.each do |award| %>
					<tr>
						<td><%= award.award %></td>
						<td><%= award.award_date %></td>
						<td style="text-align: right;"><a href="/student/resume/awards/<%= award.id %>/edit" class="btn btn-small">Edit</a></td>
					</tr>
					<% end %>
				</table>
			</div>
			
		</div> <!-- /row -->
	</div> <!-- /container -->

