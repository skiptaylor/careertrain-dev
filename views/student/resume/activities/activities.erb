<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="col-md-12">
				<h1>Activities and Associations &nbsp; <small><%= @student.name %></small></h1><br />
		
			<div class="col-md-8 offset2">
			
				<p><a href="/student/resume/activities/new" class="btn btn-small btn-success pull-right"><i class="icon-plus"></i> New</a>
				<a href="/student/resume/index" class="btn btn-small">Resum&eacute; Tool</a></p>
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>Position</th>
						<th>Organization</th>
						<th> </th>
					</tr>
					<% @student.activities.each do |activity| %>
					<tr>
						<td><%= activity.position %></td>
						<td><%= activity.organization %></td>
						<td style="text-align: right;"><span class="under-link"><a href="/student/resume/activities/<%= activity.id %>/edit">Edit</a></span></td>
					</tr>
					<% end %>
				</table>
				<br />
			</div>

		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->
