	<div class="container">	
		<div class="row">  
			<div class="col-md-12">
				<a href="/student/resume/index" class="btn btn-small pull-right" style="margin-top: 12px;">Resume Tool</a>
				<h1 class="page-header">Activities and Associations</h1>
		
			<div class="col-md-8 offset-md-2">

				<table class="table table-striped table-condensed ">
					<tr>
						<th>Position</th>
						<th>Organization</th>
						<th> 
						<a href="/student/resume/activities/new" class="btn btn-small btn-success pull-right"><i class="icon-plus"></i> New</a></th>
					</tr>
					<% @student.activities.each do |activity| %>
					<tr>
						<td><%= activity.position %></td>
						<td><%= activity.organization %></td>
						<td style="text-align: right;"><a href="/student/resume/activities/<%= activity.id %>/edit" class="btn btn-small">Edit</a> &nbsp; <a href="/student/resume/activities/<%= activity.id %>/view" class="btn btn-small">View</a></td>
					</tr>
					<% end %>
				</table>
				<br />
			</div>

		</div> <!-- /row -->
	</div> <!-- /container -->
