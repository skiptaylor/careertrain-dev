<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="col-md-12">
				<h1>Reference &nbsp; <small><%= @student.name %></small></h1><br />
			</div>
			<div class="col-md-8 offset2">
			
				<p>You can add other references after saving.</p>
				
				<form class="form-horizontal" method="post">
					
					<div class="control-group">
					   <label class="control-label" for="name">Name</label>
						<div class="controls">
							<input type="text" name="name" id="name" class="textfield col-md-4" value="<%= @reference.name %>" />
						</div>
					</div>
					<div class="control-group">
					   <label class="control-label" for="relationship">Relationship</label>
						<div class="controls">
							<input type="text" name="relationship" id="relationship" class="textfield col-md-4" value="<%= @reference.relationship %>" />
						</div>
					</div>
					<div class="control-group">
					   <label class="control-label" for="address">Address</label>
						<div class="controls">
							<input type="text" name="address" id="address" class="textfield col-md-4" value="<%= @reference.address %>" />
						</div>
					</div>
					<div class="control-group">
					   <label class="control-label" for="city">City</label>
						<div class="controls">
							<input type="text" name="city" id="city" class="textfield col-md-4" value="<%= @reference.city %>" />
						</div>
					</div>
					<div class="control-group">
					   <label class="control-label" for="state">State</label>
						<div class="controls">
							<input type="text" name="state" id="state" class="textfield col-md-4" value="<%= @reference.state %>" />
						</div>
					</div>
					<div class="control-group">
					   <label class="control-label" for="zip">Zip</label>
						<div class="controls">
							<input type="text" name="zip" id="zip" class="textfield col-md-4" value="<%= @reference.zip %>" />
						</div>
					</div>
					<div class="control-group">
					   <label class="control-label" for="phone">Phone</label>
						<div class="controls">
							<input type="text" name="phone" id="phone" class="textfield col-md-4" value="<%= @reference.phone %>" />
						</div>
					</div>
					<div class="control-group">
					   <label class="control-label" for="email">Email</label>
						<div class="controls">
							<input type="text" name="email" id="email" class="textfield col-md-4" value="<%= @reference.email %>" />
						</div>
					</div>
					<div class="control-group">
						<div class="controls">
							<input class="btn btn-small btn-primary" type="submit" value="Save" /> &nbsp; <a class="btn btn-small" href="/student/resume/references/references">Cancel</a> &nbsp; <% if @student.references.count > 0 %><a class="btn btn-small btn-warning delete" href="/student/resume/references/<%= @reference.id %>/delete">Delete</a><% end %>
						</div>
					</div>
		
				</form>	
			</div>
			
		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->