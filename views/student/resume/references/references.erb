<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="span12">
				<h1>References &nbsp; <small><%= @student.name %></small></h1><br />
			</div>
			<div class="span8 offset2">
				<p><a href="/student/resume/references/new" class="btn btn-small btn-success pull-right"><i class="icon-plus"></i> New</a>
				<a href="/student/resume/index" class="btn btn-small">Resum&eacute; Tool</a></p>
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>Name</th>
						<th>Relationship</th>
						<th> </th>
					</tr>
					<% @student.references.each do |reference| %>
					<tr>
						<td><%= reference.name %></a></td>
						<td><%= reference.relationship %></a></td>
						<td style="text-align: right;"><span class="under-link"><a href="/student/resume/references/<%= reference.id %>/edit">Edit</a></span> &nbsp; <span class="under-link"><a href="/student/resume/references/<%= reference.id %>/view">View</a></span></td>
					</tr>
					<% end %>
				</table>
			</div>

		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->

