<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="span8 offset2">
				<h1>Character Traits &nbsp; <small><%= @student.name %></small></h1><br />
			</div>
			<div class="span8 offset2">
				<p><a href="/student/resume/index" class="btn btn-small">Resume Tool</a></p>
				
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>Trait 1</th>
						<th>Trait 2</th>
						<th>Trait 3</th>
						<th> </th>
					</tr>
					<% @student.traits.each do |trait| %>
					<tr>
						<td><%= trait.trait_1 %></td>
						<td><%= trait.trait_2 %></td>
						<td><%= trait.trait_3 %></td>
						<td style="text-align: right;"><span class="under-link"><a href="/student/resume/traits/<%= trait.id %>/edit">Edit</a></span></td>
					</tr>
					<% end %>
				</table>
			</div>

		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->
