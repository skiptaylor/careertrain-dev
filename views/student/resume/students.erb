	<div class="container">	
		<div class="row">  
			<div class="col-md-12">
				<a href="/admin/admin_edit" class="btn btn-small pull-right" style="margin-top: 12px;">Admin Index</a>
				<h1 class="page-header">Student List</h1>
			</div>
		</div>
		<div class="row"> 
			<div class="col-md-12" style="margin-bottom: 1em;">
				<p class="pull-right">Total number of students: <strong><%= @student.count %></strong></p>
				<form class="form-search" method="get">
				<div class="input-append">
					<input type="text" class="textfield col-md-6 search-query" style="padding: 5px; margin-right: 12px;" name="search" placeholder="Search Email" value="<%= params[:search] %>" />
					<button type="submit" class="btn btn-success">Find</button>
				</div>
				</form>
			</div>
		</div>
		<div class="row"> 
			<div class="col-md-12">
				
				
				
			
			<table class="table table-striped table-sm table-hover">
					<tr class="table-success">
						<th>Name</th>
						<th>Email</th>
						<th>School ID</th>
						<th> </th>
					</tr>
					<% @student.sort_by(&:updated_at).reverse.each do |student| %>
					<tr>
						<td><%= student.first_name %> <%= student.last_name %></td>
						<td><%= student.email %></td>
						<td><%= student.school_password %></td>
						<td style="text-align: right;"><a href="/student/resume/<%= student.id %>/student"><i class="icon-info-sign"></i></a>&nbsp;&nbsp;&nbsp;<a href="/student/resume/<%= student.id %>/delete" class="delete"><i class="icon-trash delete"></i></a></td>
					</tr>
					<% end %>
				</table>
				
			</div>
			
		</div> <!-- /row -->
	</div> <!-- /container -->

<script type="text/javascript">
	$(function() {
	  $(document).ready(function() {
	    $('a.delete').click(function() {
	      if (!confirm('This cannot be undone! Continue?')) {
	        return false;
	      }
	    });
	  });
	}).call(this);
</script>
	
 
 
 
