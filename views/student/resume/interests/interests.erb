<div class="container-white">
	<div class="container">	
		<div class="row">  
			<div class="span12">
				<h1>Interests and Hobbies &nbsp; <small><%= @student.name %></small></h1><br />
			</div>
			<div class="span8 offset2">
				<p><a href="/student/resume/interests/new" class="btn btn-small btn-success pull-right"><i class="icon-plus"></i> New</a>
				<a href="/student/resume/index" class="btn btn-small">Resume Tool</a></p>
				
				<table class="table table-striped table-condensed table-hover">
					<tr>
						<th>Interest</th>
						<th> </th>
					</tr>
					<% @student.interests.each do |interest| %>
					<tr>
						<td><%= interest.interest %></td>
						<td style="text-align: right;"><span class="under-link"><a href="/student/resume/interests/<%= interest.id %>/edit">Edit</a></span></td>
					</tr>
					<% end %>
				</table>
			</div>

		</div> <!-- /row -->
	</div> <!-- /container -->
</div> <!-- /container-white -->
