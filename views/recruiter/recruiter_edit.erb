				<div class="form-row">
					<div class="form-group col-md-6">
						<label for="city">City</label>
						<input type="text" name="city" id="city" class="form-control" value="<%= @recruiter.city %>" />
					</div>
					<div class="control-group col-md-2">
						<label for="state">State</label>
