						<input type="text" name="zip" id="zip" class="form-control" pattern="^\s*\d{5}(-?\s*\d{4})?\s*$" maxlength="10" minlength="5" value="<%= @recruiter.zip %>" />
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
						<label for="phone">Phone</label>
						<input onkeydown="phoneNumberFormatter()" type="text" name="phone" id="phone" class="form-control" value="<%= @recruiter.phone %>" />
					</div>
				</div>
				
				
				<% if session[:admin ]%>
				<div class="form-row">
					<div class="form-group col-md-12">
						<label class="checkbox">&nbsp;</label>
						
						<input type="checkbox" name="active" id="active" <%= 'checked="checked"' if @recruiter.active  %> />&nbsp;&nbsp;&nbsp;<strong>Active Recruiter</strong>
						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
						
		 				<input type="checkbox" name="recruiter_status" id="recruiter_status" <%= 'checked="checked"' if @recruiter.recruiter_status  %> /><strong>&nbsp;&nbsp;&nbsp;RRC</strong><label class="checkbox">
						
					</div>
				</div>
				<% end %>
				
				
				<div class="form-row">
					<div class="form-group col-md-12">
						<p style="margin-top:14px;"><input class="btn btn-primary" type="submit" value="Save" /> &nbsp; <a onclick="goBack()" class="btn btn-secondary" style="color: white;">Cancel</a> &nbsp; <a class="delete btn btn-warning" href="/recruiters/<%= @recruiter.id %>/delete">Delete</a></p>
					</div>
				</form>	
			</div>
			</div> <!-- /span6 -->
		</div> <!-- /row -->
	</div> <!-- /container -->


<script>
  function formatPhoneNumber(value) {
    if (!value) return value;
    const phoneNumber = value.replace(/[^\d]/g, '');
    const phoneNumberLength = phoneNumber.length;
    if (phoneNumberLength < 4) return phoneNumber;
    if (phoneNumberLength < 7) {
      return `(${phoneNumber.slice(0, 3)}) ${phoneNumber.slice(3)}`;
    }
    return `(${phoneNumber.slice(0, 3)}) ${phoneNumber.slice(
      3,
      6
    )}-${phoneNumber.slice(6, 9)}`;
  }

  function phoneNumberFormatter() {
    const inputField = document.getElementById('phone');
    const formattedInputValue = formatPhoneNumber(inputField.value);
    inputField.value = formattedInputValue;
  }
</script>
	
