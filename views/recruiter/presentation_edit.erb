
<div class="container">	
	<div class="row">
		<div class="col-md-12">
			<h1 class="page-header">Register Class</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">

			<% if session[:recruiter] == @school.recruiter_id %>
			<h3><%= @school.school_name %></h3>
			<%= @school.school_address1 %><br />
			<%= @school.school_address2 %><br />
			<%= @school.school_city %> <%= @school.school_state %> &nbsp; <%= @school.school_zip %><br /><br />
			<strong>School ID:</strong> &nbsp;<%= @school.school_password %><br />
			<strong>Recruiter:</strong> &nbsp;<%= @school.recruiter.rank %> <%= @school.recruiter.first_name %> <%= @school.recruiter.middle_name %> <%= @school.recruiter.last_name %><br />
			<strong>Recruiter Email:</strong> &nbsp;<%= @school.recruiter.email %>
			<% end %>


		</div>
		<div class="span6">

			<form method="get">
				<p>
					<div class="form-group col-md5">
						<label for="class_date">Class Date</label>
						<input type="text" class="form-control" name="class_date" id="class_date" value="<%= @presentation.class_date %>" /> 
					</div>
					<div class="form-group col-md5">
						<label for="number_students">Number of Students</label>
						<input type="text" class="form-control" name="number_students" id="number_students" value="<%= @presentation.number_students %>" /> 
					</div>
					<a href="" class="btn btn-primary">Register Class</a>
				</p>
		</div> 
	</div> <!-- /row -->
</div> <!-- /container -->

