<div class="container">
	<ul class="breadcrumb">
		 <li><a href="/arng/arng">Career Direction 2</a> <span class="divider"> </span> </li>
		 <% if session[:recruiter] %>
		 <li><a href="/arng/leads">Generate Leads</a> <span class="divider"> </span> </li>
		 <li><a href="/arng/register">Register Your School</a> <span class="divider"> </span> </li>
		 
		 <li><a href="/recruiters/<%= session[:recruiter] %>/profile" style="color: #9a0000;">Recruiter Profile</a> <span class="divider"> </span> </li>
		
		 <li><a href="/arng/practices">Best Practices</a> <span class="divider"> </span> </li>
		 <li><a href="/arng/downloads">Downloads</a> <span class="divider"> </span> </li>
		 <li><a href="/arng/faq">FAQ</a> <span class="divider"> </span> </li>
		<% end %>
	 </ul>
</div>

<div class="container-white">
	<div class="container">	
		<div class="row">
			<div class="span12">
				<h1 class="page-header">Recruiter Profile</h1>
			</div>
			<div class="span5">
				<h3>
					<%= @recruiter.rank %> <%= @recruiter.first_name %> <%= @recruiter.middle_name %> <%= @recruiter.last_name %><br />
					<span class="badge badge-info"><% if @recruiter.recruiter_status == true %>RRC<% end %></span>
				</h3>
				<p>
					<%= @recruiter.address1 %><br />
					<% unless @recruiter.address2 = "" %><%= @recruiter.address2 %><br /><% end %>
					<%= @recruiter.city %> <%= @recruiter.state %> &nbsp;<%= @recruiter.zip %><br />
				</p>
				<p>
					<%= @recruiter.email %><br />
					<%= @recruiter.phone %><br />
					SSN ... <%= @recruiter.ssnl4 %>
				</p>	
				<br />
				<p><a href="/recruiters/<%= @recruiter.id %>/edit/" class="btn btn-small btn-info" style="margin-bottom: 12px;">Edit</a><br />
				<a href="/recruiters/signout" class="btn btn-inverse btn-mini"><i class="icon-signout"> </i> &nbsp;Sign out</a></p>
			</div>
			<div class="span7">
				<h3> School Accounts</h3>
				<table class="table table-striped table-hover table-condensed">
					<tr>
						<th style="text-align: center; color: #af4532;">ID</th>
						<th>School</th>
						<th>Password</th>
						<th style="text-align: center;">State</th>
						<th style="text-align: right;"><a href="/arng/register" class="btn btn-small btn-success">New</a></th>
					</tr>
					
					<% @school.sort_by(&:updated_at).each do |school| %>
					<% if session[:recruiter] == school.recruiter_id %>
					<tr>
						<th style="text-align: center; color: #af4532;"><%= school.recruiter_id %></th>
						<td><%= school.school_name %></td>
						<td><%= school.school_password %></td>
						<td style="text-align: center;"><%= school.school_state %></td>
						<td style="text-align: right;"><a href="/arng/schools/<%= school.id %>/school/" class="btn btn-small">View</a></td>
					</tr>
					<% end %>
					<% end %>

				</table>
				
			</div> <!-- /span -->
		</div> <!-- /row -->
		<span style="color: #af4532;"><%= session[:admin] %> / <%= session[:recruiter] %><br /><%= session.inspect %></span>
		
	</div> <!-- /container -->
</div> <!-- /container-white -->
