
	<div class="container">	
		<div class="row">
			<div class="col-md-12">
				<h1 class="page-header">Recruiter Profile</h1>
			</div>
			<div class="col-md-5">
				<h3>
					<%= @recruiter.rank %> <%= @recruiter.first_name %> <%= @recruiter.middle_name %> <%= @recruiter.last_name %><br />
				</h3>
				<p><span class="badge badge-info"><% if @recruiter.recruiter_status == true %>RRC<% end %></span></p>
				<p>
					<%= @recruiter.address1 %><br />
					<% unless @recruiter.address2 = "" %><%= @recruiter.address2 %><br /><% end %>
					<%= @recruiter.city %> <%= @recruiter.state %> &nbsp;<%= @recruiter.zip %><br />
				</p>
				<p>
					<%= @recruiter.email %><br />
					<%= @recruiter.phone %>
				</p>	
				<br />
				<p><a href="/recruiters/<%= @recruiter.id %>/edit/" class="btn btn-sm btn-primary" >Edit recruiter</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="/recruiters/signout" class="btn btn-secondary btn-sm"><i class="icon-signout"> </i> &nbsp;Sign out</a></p>
				<strong>PROTECT YOUR PRIVACY.</strong>
				If you are using a public or shared device <strong>sign out</strong> when finished. <br /><br />
			</div>
			
			
			<div class="col-md-7">
				<h3> School Accounts</h3>
				<table class="table table-striped table-hover table-sm" style="margin-bottom: 28px;">
					<tr>
						<!-- <th style="text-align: center; color: #af4532;">ID</th> -->
						<th>School</th>
						<th>Password</th>
						<th style="text-align: right;"><!-- <a href="/arng/register" class="btn btn-small btn-success">New</a> --></th>
					</tr>

					<% @school.sort_by(&:updated_at).each do |school| %>
					<% if session[:recruiter] == school.recruiter_id %>
					<tr>
						<!-- <th style="text-align: center; color: #af4532;"><%= school.recruiter_id %></th> -->
						<td><%= school.school_name %></td>
						<td><%= school.school_password %></td>
						<td style="text-align: right;"><a href="/arng/schools/<%= school.id %>/school/" class="btn btn-small">Get Reports</a></td>
					</tr>
					<% end %>
					<% end %>

				</table>



				<br /><br />
			</div> <!-- /span -->
		</div> <!-- /row -->
		
		
	</div> <!-- /container -->
