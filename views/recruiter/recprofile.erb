
	<div class="container">	
		<div class="row">
			<div class="col-md-12">
				<h1 class="page-header">Recruiter Profile</h1>
			</div>
			<div class="col-md-6">
				<h3>
					<%= @recruiter.rank %> <%= @recruiter.first_name %> <%= @recruiter.middle_name %> <%= @recruiter.last_name %><br />

				</h3>
				<p><span class="badge badge-info"><% if @recruiter.recruiter_status == true %>RRC<% end %></span></p>
				<p>
					<%= @recruiter.address1 %><br />
					<% unless @recruiter.address2 = "" %><%= @recruiter.address2 %><br /><% end %>
					<%= @recruiter.city %> <%= @recruiter.state %> &nbsp;<%= @recruiter.zip %><br />
				</p>
				<p>
					<%= @recruiter.email %><br />
					<%= @recruiter.phone %>
				</p>	
				
				<p><a href="/recruiters/<%= @recruiter.id %>/edit/" class="btn" >Edit recruiter</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="/recruiters/signout" class="btn btn-secondary btn-sm"><i class="icon-signout"> </i> &nbsp;Sign out</a></p>
				<span style="color: #919191;"><strong>PROTECT YOUR PRIVACY.</strong>
				If you are using a public or shared device <strong>sign out</strong> when finished.</span> <br /><br />
			</div>
			
			
			
			
			<div class="col-md-6">	
				<h5>Fiind School for your account.</h5>
				<p>
					<form method="get" class="form-search form-inline">
					  <input type="text" name="zip" class="form-control search-query" placeholder="School Zip"/>  &nbsp;  
					  <input type="submit" class="btn btn-success" />
					</form>
		  		</p>
				<% if @results %>
				<p>
					<% @results.each do |c| %>
						<hr />
						<span style="font-size: 1.2rem;"><%= c.school_name %></span> &nbsp; <small><%= "(Not Activated)" unless c.active %></small><br />
						<%= c.school_city %> <%= c.school_state %> &nbsp;<%= c.school_zip %> &nbsp; &nbsp; &nbsp; <% unless c.active %><% else %><br />
						School Password &nbsp;&nbsp;<span class="password-show"><%= c.school_password %></span><% end %>
					<% end %>
				</p> 
				<% end %>
				<% if (@results.count < 1) && (params[:zip] != '') %>
					<hr />
					<span class="password-show">NO SCHOOL FOUND FOR <%= params[:zip] %></span>
				<% end %>
					<hr />
				<p style="line-height: 1.3em;">If the school is <strong>not listed above</strong> or listed as <strong>Not Activated</strong>, please call 888-326-9229.</p>
			</div>
		
		
		
		
		
		
		</div>
		<div class="row">	
		
			<div class="col-md-12">
				<hr />
				<h3> School Accounts</h3>
				
				<table class="table table-striped table-hover table-sm" style="margin-bottom: 28px;">
					<tr>
						<!-- <th style="text-align: center; color: #af4532;">ID</th> -->
						<th>School</th>
						<th>Password</th>
						<!-- <th style="text-align: right;"></th> -->
						<th style="text-align: right;"></th>
					</tr>

					<% @school.sort_by(&:updated_at).each do |school| %>
					<% unless school.school_password == '' || school.school_password == nil %>
					<% if session[:recruiter] == school.recruiter_id %>
					
					<tr>
						<!-- <th style="text-align: center; color: #af4532;"><%= school.recruiter_id %></th> -->
						<td><%= school.school_name %> - <%= school.id %> - <%= school.recruiter_id %></td>
						<td><%= school.school_password %></td>
						<!-- <td style="text-align: right;"><a href="/recruiter/school/<%= school.id %>/presentation/new" class="btn btn-small">Register Class</a></td> -->
						<td style="text-align: right;"><a href="/arng/schools/<%= school.id %>/school_report" class="btn btn-small">Get Reports</a></td>
					</tr>
					<% end %>
					<% end %>
					<% end %>
				</table>
				<br /><br />
			</div> <!-- /span -->
		</div> <!-- /row -->
	</div> <!-- /container -->


			